<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackGroup"
    android:orientation="vertical">

    <include layout="@layout/include_common_header" />

    <include layout="@layout/include_register_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="单位名称："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_unit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="所属上级公司："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite">


                <TextView
                    android:id="@+id/tv_society_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="13dp"
                    android:text="社会统一信用号："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_write_credit"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/register_unit_ic_creadit1" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/register_unit_ic_creadit2" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="9dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="开户许可证："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:padding="0dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_bg_blue"
                    android:text="上传照片"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ib_allow_pic_01"
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:id="@+id/ib_allow_pic_02"
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:paddingLeft="9dp"
                    android:text="资信证明："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_bg_blue"
                    android:text="上传照片"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />
                </LinearLayout>
            </LinearLayout>


            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:paddingLeft="9dp"
                    android:text="上一年度的完税证明："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_bg_blue"
                    android:text="上传照片"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="13dp"
                    android:text="开户行："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="9dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14dp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="16dp"
                    android:text="账号："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14dp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="14dp"
                    android:text="地址："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14dp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor"></include>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:paddingLeft="8dp"
                    android:text="资质证书照："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_bg_blue"
                    android:text="上传照片"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="13dp"
                    android:text="公司官网："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="9dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:text="联系电话："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="13dp"
                    android:text="企业邮箱："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="14dp"
                    android:text="经营区域："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_marginLeft="8dp"

                    android:gravity="bottom"
                    android:text="可参与的项目类别："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="电器安装工程、土建工程、通信及其自动化工程、实验运维、顶管、其他（做成可选多类别）"
                    android:lines="5"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="136dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:background="@drawable/common_bg_blue"
                    android:gravity="center"
                    android:text="提交审核"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>