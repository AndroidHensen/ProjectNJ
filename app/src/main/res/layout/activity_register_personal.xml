<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackGroup"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="姓名："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="16sp" />
            </LinearLayout>


            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center">


                <TextView
                    android:id="@+id/tv_society_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="身份证："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_id_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ib_id_card01"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/register_unit_ic_creadit1" />

                    <include layout="@layout/include_common_split_line_ver" />

                    <ImageButton
                        android:id="@+id/ib_id_card02"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/register_unit_ic_creadit2" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="手机："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_personl_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="邮箱："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_personl_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="单位全称："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_personl_util_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="部门："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/bt_department"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:background="@drawable/common_bg_blue"
                    android:padding="0dp"
                    android:text="工程部"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="职位："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/bt_position"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:background="@drawable/common_bg_blue"
                    android:padding="0dp"
                    android:text="项目经理"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="工号："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_job_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="16sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="资质照："
                    android:textColor="@color/colorPrimaryTitle"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/bt_personal_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:background="@drawable/common_bg_blue"
                    android:padding="0dp"
                    android:text="上传照片"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ib_personal_photo01"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:id="@+id/ib_personal_photo02"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:id="@+id/ib_personal_photo03"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/register_unit_ic_default_pic" />

                    <ImageButton
                        android:id="@+id/ib_personal_photo04"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/register_unit_ic_default_pic" />
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="136dp">

                <Button
                    android:id="@+id/bt_personal_Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:background="@drawable/common_bg_blue"
                    android:gravity="center"
                    android:text="提交审核"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>