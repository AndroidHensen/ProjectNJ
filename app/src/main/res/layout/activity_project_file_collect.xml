<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackGroup"
    android:orientation="vertical"
    tools:context="com.handsome.projectnz.View.Project.ProjectFileCollectActivity">

    <include layout="@layout/include_common_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="项目名称：" />

                <TextView
                    android:id="@+id/project_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/project_et_shape"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="1028工程"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="项目编号：" />

                <TextView
                    android:id="@+id/project_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/project_et_shape"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="101010101010101010"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="项目类别：" />

                <TextView
                    android:id="@+id/project_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/common_bg_blue_radius"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="检测工程"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <include layout="@layout/include_common_split_line_hor" />

            <com.handsome.projectnz.CustomView.ProjectDataFileView
                android:id="@+id/info_technology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:list_name="技术资料" />

            <include layout="@layout/include_common_split_line_hor" />

            <com.handsome.projectnz.CustomView.ProjectDataFileView
                android:id="@+id/info_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:list_name="材料资料" />

            <include layout="@layout/include_common_split_line_hor" />

            <com.handsome.projectnz.CustomView.ProjectDataFileView
                android:id="@+id/info_detection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:list_name="检测资料" />

            <include layout="@layout/include_common_split_line_hor" />

            <com.handsome.projectnz.CustomView.ProjectDataFileView
                android:id="@+id/info_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:list_name="工作量表" />

            <include layout="@layout/include_common_split_line_hor" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
