<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackGroup"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/include_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/version_information"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="当前版本"
                android:textSize="14sp"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/version_num"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1.0"
                android:textColor="@color/colorPrimaryMessage"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/logout"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/mine_setting_button_shape"
            android:gravity="center"
            android:text="注销登陆"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
