<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackGroup"
    android:orientation="vertical">

    <include layout="@layout/include_common_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingTop="9dp">

                <TextView
                    android:layout_width="81dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:text="项目名称："
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="264dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="9dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="81dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:text="任务名称："
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="264dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14dp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="57dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="施工量："
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="83dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="221dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/common_bd_gray"
                    android:hint=" 输入..."
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="193dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="米"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="355dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/common_bd_gray"
                    android:gravity="center"
                    android:hint="计划外工作量需在此填补充说明..."
                    android:textColor="@color/colorPrimaryMessage"
                    android:textSize="14dp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="353dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/common_bg_blue"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>