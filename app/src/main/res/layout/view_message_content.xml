<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackGroup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/message_content_bg_shape"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="11dp"
        android:paddingTop="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="工作申请"
                android:textColor="#4B72BF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/message_state"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/message_content_red_circle_shape" />
        </LinearLayout>

        <TextView
            android:id="@+id/message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="项目名称：XXXX\n任务名称：XXXX\n截至时间：2018年12月11日"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_data"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="12月12日 15：06"
                android:textColor="@color/colorPrimaryMessage"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/message_operation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="编制计划"
                android:textColor="@color/colorPrimaryMessage"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>